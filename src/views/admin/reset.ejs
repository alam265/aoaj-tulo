<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Include Vue.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div id="app" class="card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
        <h2 class="text-center text-primary mb-3">Reset Password</h2>
        <form @submit.prevent="resetPassword">
            <div class="form-group">
                <input type="email" class="form-control rounded-pill" v-model="email" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
                
                <input type="text" class="form-control rounded-pill" v-model="answer" :placeholder="question" required />
            </div>
            <div class="form-group">
                <input type="password" class="form-control rounded-pill" v-model="newPassword" placeholder="Enter your new password" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block rounded-pill">Reset Password</button>
            <p v-if="errorMessage" class="text-danger mt-3 text-center">{{ errorMessage }}</p>
            <p v-if="successMessage" class="text-success mt-3 text-center">{{ successMessage }}</p>
        </form>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        new Vue({
            el: '#app',
            data: {
                email: '',
                answer: '',
                newPassword: '',
                errorMessage: '',
                successMessage: '',
                question: ''
            },
            created() {
                this.setRandomQuestion();
            },
            methods: {
                setRandomQuestion() {
                    const questions = [
                        'Enter your age',
                        'Enter your NID number',
                        'Enter your district',
                        'Enter your phone number'
                    ];
                    this.question = questions[Math.floor(Math.random() * questions.length)];
                },
                async resetPassword() {
                    try {
                        const response = await fetch('/admin/reset-password', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                email: this.email,
                                answer: this.answer,
                                newPassword: this.newPassword
                            })
                        });

                        const data = await response.json();

                        if (data.success) {
                            this.successMessage = data.message;
                            this.errorMessage = '';
                            setTimeout(() => {
                                window.location.href = '/admin/login';
                            }, 1000);

                        } else {
                            this.errorMessage = data.message;
                            this.successMessage = '';
                        }
                    } catch (error) {
                        this.errorMessage = 'An error occurred. Please try again.';
                        this.successMessage = '';
                    }
                }
            }
        });
    </script>
</body>
</html>
