<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Issues for <%= username %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    .vote-controls {
      display: flex;
      align-items: center;
      background-color: #2c2f33; /* Dark background like in the image */
      border-radius: 25px;
      padding: 5px 15px;
      gap: 10px;
    }

    .vote-controls i {
      cursor: pointer;
      font-size: 1.5rem;
      color: #d3d3d3; /* Neutral color for arrows */
      transition: color 0.2s ease, transform 0.2s ease;
    }

    .vote-controls i:hover {
      color: #ffffff; /* White on hover */
      transform: scale(1.2); /* Slight enlargement on hover */
    }

    .vote-controls .vote-count {
      font-size: 1.2rem;
      font-weight: bold;
      color: #d3d3d3; /* Neutral color for the count */
    }
  </style>
</head>
<body class="bg-light">
  <div class="container my-5">
    <h1 class="text-center mb-4">Issues created by <%= username %></h1>

    <% if (!issues || issues.length === 0) { %>
      <div class="alert alert-warning text-center">No issues found for this user.</div>
    <% } else { %>
      <!-- Vertical Stack of Cards -->
      <div class="d-flex flex-column gap-4">
        <% issues.forEach(issue => { %>
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= issue.title %></h5>
              <p class="card-text"><%= issue.description %></p>

              <!-- Side-by-Side Media -->
              <div class="d-flex gap-3">
                <% if (issue.imageURL) { %>
                  <img 
                    src="<%= issue.imageURL %>" 
                    class="img-fluid" 
                    style="max-width: 45%; max-height: 300px; object-fit: cover; cursor: pointer;" 
                    alt="Issue Image" 
                    data-bs-toggle="modal" 
                    data-bs-target="#mediaModal" 
                    data-media-type="image" 
                    data-src="<%= issue.imageURL %>"
                  >
                <% } %>
                <% if (issue.videoURL) { %>
                  <video 
                    class="img-fluid" 
                    style="max-width: 45%; max-height: 300px; object-fit: cover; cursor: pointer;" 
                    controls 
                    muted
                    data-bs-toggle="modal" 
                    data-bs-target="#mediaModal" 
                    data-media-type="video" 
                    data-src="<%= issue.videoURL %>"
                  >
                    <source src="<%= issue.videoURL %>" type="video/mp4">
                  </video>
                <% } %>
              </div>

              <!-- Reddit-Style Voting Controls -->
              <div class="d-flex justify-content-start align-items-center mt-3">
                <div class="vote-controls">
                  <!-- Upvote Icon -->
                  <i class="fas fa-arrow-up"></i>
                  <!-- Vote Count -->
                  <div class="vote-count"><%= issue.upVotes.length - issue.downVotes.length %></div>
                  <!-- Downvote Icon -->
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="ms-auto d-inline">

                  <div  >
                    <form action="/user/<%= issue._id %>/edit" >
                      <button class="btn btn-warning">Edit</button>
                    </form>
                  </div>
                  <div class="d-inline" >
                    <form action="/user/<%= issue._id %>/delete" method="post" >
                      <button class="btn btn-danger">Delete</button>
                    </form>
                  </div>
  

                </div>
    
              </div>
            </div>

          </div>
        <% }) %>
      </div>
    <% } %>
    <div>
        <a href="/user/dashboard">
            <button class="btn btn-primary">Dashboard</button>
        </a>
      </div>
  </div>

  <!-- Modal for Image/Video -->
  <div class="modal fade" id="mediaModal" tabindex="-1" aria-labelledby="mediaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="mediaModalLabel">Media Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body d-flex justify-content-center align-items-center">
          <img id="modalImage" class="img-fluid d-none" alt="Preview">
          <video id="modalVideo" class="w-100 d-none" controls></video>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Handle click on media thumbnails
    const modal = document.getElementById('mediaModal');
    const modalImage = document.getElementById('modalImage');
    const modalVideo = document.getElementById('modalVideo');

    modal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget; // Element that triggered the modal
      const mediaType = button.getAttribute('data-media-type'); // 'image' or 'video'
      const src = button.getAttribute('data-src'); // URL of the media

      // Reset modal content
      modalImage.classList.add('d-none');
      modalVideo.classList.add('d-none');
      modalVideo.pause();

      // Display the appropriate media type
      if (mediaType === 'image') {
        modalImage.src = src;
        modalImage.classList.remove('d-none');
      } else if (mediaType === 'video') {
        modalVideo.src = src;
        modalVideo.classList.remove('d-none');
      }
    });

    modal.addEventListener('hidden.bs.modal', function () {
      modalImage.src = '';
      modalVideo.src = '';
      modalVideo.pause();
    });
  </script>
</body>
</html>
