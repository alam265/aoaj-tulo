<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Issues for <%= username %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    .vote-controls {
      display: flex;
      align-items: center;
      background-color: #2c2f33;
      border-radius: 25px;
      padding: 5px 15px;
      gap: 10px;
    }

    .vote-controls i {
      cursor: pointer;
      font-size: 1.5rem;
      color: #d3d3d3;
      transition: color 0.2s ease, transform 0.2s ease;
    }

    .vote-controls i:hover {
      color: #ffffff;
      transform: scale(1.2);
    }

    .vote-controls .vote-count {
      font-size: 1.2rem;
      font-weight: bold;
      color: #d3d3d3;
    }

    .filter-button {
      margin-right: 10px;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container my-5">
    <h1 class="text-center mb-4">Issues created by <%= username %></h1>

    <!-- Filter Options -->
    <div class="d-flex justify-content-center mb-4">
      <div class="btn-group" role="group" aria-label="Issue filter">
        <button class="btn btn-secondary filter-button" id="filter-all" onclick="filterIssues('all')">All</button>
        <button class="btn btn-secondary filter-button" id="filter-solved" onclick="filterIssues('Resolved')">Resolved</button>
        <button class="btn btn-secondary filter-button" id="filter-pending" onclick="filterIssues('Pending')">Pending</button>
        <button class="btn btn-secondary filter-button" id="filter-under-review" onclick="filterIssues('Under Review')">Under Review</button>
      </div>
    </div>

    <% if (!issues || issues.length === 0) { %>
      <div class="alert alert-warning text-center">No issues found for this user.</div>
    <% } else { %>
      <div class="d-flex flex-column gap-4" id="issue-list">
        <% issues.forEach(issue => { %>
          <div class="card shadow-sm issue-card" data-status="<%= issue.status %>">
            <div class="card-body">
              <h5 class="card-title"><%= issue.title %></h5>
              <p class="card-text"><%= issue.description %></p>

              <!-- Side-by-Side Media -->
              <div class="d-flex gap-3">
                <% if (issue.imageURL) { %>
                  <img 
                    src="<%= issue.imageURL %>" 
                    class="img-fluid" 
                    style="max-width: 45%; max-height: 300px; object-fit: cover; cursor: pointer;" 
                    alt="Issue Image" 
                    data-bs-toggle="modal" 
                    data-bs-target="#mediaModal" 
                    data-media-type="image" 
                    data-src="<%= issue.imageURL %>"
                  >
                <% } %>
                <% if (issue.videoURL) { %>
                  <video 
                    class="img-fluid" 
                    style="max-width: 45%; max-height: 300px; object-fit: cover; cursor: pointer;" 
                    controls 
                    muted
                    data-bs-toggle="modal" 
                    data-bs-target="#mediaModal" 
                    data-media-type="video" 
                    data-src="<%= issue.videoURL %>"
                  >
                    <source src="<%= issue.videoURL %>" type="video/mp4">
                  </video>
                <% } %>
              </div>

              <!-- Display Admin Response if Resolved -->
              <% if (issue.status === 'Resolved' && issue.adminResponse && issue.adminResponse.message) { %>
                <div class="alert alert-info mt-3">
                  <strong>Admin Response:</strong> <%= issue.adminResponse.message %>
                  <br>
                  <small>Responded on: <%= new Date(issue.adminResponse.updatedAt).toLocaleDateString() %></small>
                </div>
              <% } %>

              <!-- Voting Controls -->
              <div class="d-flex justify-content-start align-items-center mt-3">
                <div class="vote-controls">
                  <i class="fas fa-arrow-up"></i>
                  <div class="vote-count"><%= issue.upVotes.length - issue.downVotes.length %></div>
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="ms-auto">
                  <form action="/user/<%= issue._id %>/edit" class="d-inline">
                    <button class="btn btn-warning">Edit</button>
                  </form>
                  <form action="/user/<%= issue._id %>/delete" method="post" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div>
      <a href="/user/dashboard">
        <button class="btn btn-primary">Dashboard</button>
      </a>
    </div>
  </div>

  <!-- Modal for Image/Video -->
  <div class="modal fade" id="mediaModal" tabindex="-1" aria-labelledby="mediaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="mediaModalLabel">Media Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body d-flex justify-content-center align-items-center">
          <img id="modalImage" class="img-fluid d-none" alt="Preview">
          <video id="modalVideo" class="w-100 d-none" controls></video>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const modal = document.getElementById('mediaModal');
    const modalImage = document.getElementById('modalImage');
    const modalVideo = document.getElementById('modalVideo');

    modal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const mediaType = button.getAttribute('data-media-type');
      const src = button.getAttribute('data-src');

      modalImage.classList.add('d-none');
      modalVideo.classList.add('d-none');
      modalVideo.pause();

      if (mediaType === 'image') {
        modalImage.src = src;
        modalImage.classList.remove('d-none');
      } else if (mediaType === 'video') {
        modalVideo.src = src;
        modalVideo.classList.remove('d-none');
      }
    });

    modal.addEventListener('hidden.bs.modal', function () {
      modalImage.src = '';
      modalVideo.src = '';
      modalVideo.pause();
    });

    function filterIssues(status) {
      const issues = document.querySelectorAll('.issue-card');
      issues.forEach(issue => {
        const issueStatus = issue.getAttribute('data-status');
        issue.style.display = (status === 'all' || issueStatus === status) ? 'block' : 'none';
      });
    }
  </script>
</body>
</html>
